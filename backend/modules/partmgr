#!/bin/bash

function run_partmgr()
{
	case "$1" in
	cfdisk|fdisk)
		get_root
		TERM=xterm /sbin/"$1" "$2"
		;;
	gparted|qtparted)
		get_root X
		"$1" "$2"
		;;
	esac
}

function send_partition_managers()
{
	send data partition_managers
        for app in gparted qtparted fdisk cfdisk
        do
                which $app &>/dev/null || continue
		echo $app
	done
}

